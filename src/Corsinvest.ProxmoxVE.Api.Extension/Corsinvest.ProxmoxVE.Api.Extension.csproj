    <PackageReference Include="Corsinvest.ProxmoxVE.Api.Metadata" Version="1.0.1" />
    <PackageReference Include="BetterConsoleTables" Version="1.1.2" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.4.2" />
  </ItemGroup>
